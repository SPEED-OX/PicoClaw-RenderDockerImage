{
  "providers": {
    "openrouter": {
      "api_key": "${OPENROUTER_API_KEY}",
      "base_url": "https://openrouter.ai/api/v1",
      "models": ["mistralai/mistral-7b-instruct:free", "meta-llama/llama-3-8b-instruct:free"]
    },
    "groq": {
      "api_key": "${GROQ_API_KEY}",
      "base_url": "https://api.groq.com/openai/v1",
      "models": ["llama3-70b-8192", "mixtral-8x7b-32768"]
    },
    "google": {
      "api_key": "${GOOGLE_API_KEY}",
      "base_url": "https://generativelanguage.googleapis.com/v1beta/openai",
      "models": ["gemini-1.5-flash", "gemini-1.5-pro"]
    },
    "deepseek": {
      "api_key": "${DEEPSEEK_API_KEY}",
      "base_url": "https://api.deepseek.com/v1",
      "models": ["deepseek-chat", "deepseek-reasoner"]
    }
  },
  "agents": {
    "default": {
      "provider": "openrouter",
      "model": "mistralai/mistral-7b-instruct:free",
      "fallback": "groq/llama3-70b-8192"
    },
    "reason": {
      "provider": "deepseek",
      "model": "deepseek-reasoner",
      "fallback": "groq/llama3-70b-8192"
    },
    "search": {
      "provider": "groq",
      "model": "llama3-70b-8192",
      "fallback": "openrouter/mistralai/mistral-7b-instruct:free"
    },
    "creative": {
      "provider": "google",
      "model": "gemini-1.5-flash",
      "fallback": "openrouter/mistralai/mistral-7b-instruct:free"
    }
  },
  "routing": {
    "keywords": {
      "reason": ["why", "explain", "analyze", "compare", "pros", "cons", "difference", "should i"],
      "search": ["search", "find", "latest", "news", "current", "today", "what is"],
      "creative": ["write", "poem", "story", "creative", "generate", "draft", "compose"]
    },
    "llm_classifier": true,
    "classifier_model": "openrouter/mistralai/mistral-7b-instruct:free"
  },
  "load_balancing": "round_robin",
  "bot": {
    "name": "PicoClaw",
    "personality": "Concise, sharp, no fluff. Capable assistant not a chatbot.",
    "max_history": 20,
    "commands": [
      ["start", "Start PicoClaw"],
      ["help", "Show all commands"],
      ["search", "Search the web"],
      ["browse", "Fetch and summarize a URL"],
      ["remind", "Set a reminder"],
      ["reminders", "List active reminders"],
      ["cancelreminder", "Cancel a reminder"],
      ["note", "Save a note"],
      ["notes", "List all notes"],
      ["deletenote", "Delete a note by ID"],
      ["run", "Run a whitelisted command"],
      ["model", "Switch or view current model"],
      ["agent", "Switch or view current agent"],
      ["shortcut", "Manage command shortcuts"],
      ["config", "View bot configuration"],
      ["session", "View or reset session"],
      ["clear", "Clear conversation history"],
      ["status", "Bot status and uptime"],
      ["email", "Send an email"],
      ["inbox", "Check last 5 unread emails"],
      ["gh", "GitHub operations"]
    ]
  }
}
