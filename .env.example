# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=

# Your Render app URL (e.g. https://picoclaw.onrender.com) - no trailing slash
RENDER_APP_URL=

# Server port (Render injects this, keep as fallback)
PORT=8080

# Your Telegram Chat ID (owner only access) - comma-separated for multiple
ALLOWED_CHAT_IDS=

# Max conversation history messages to keep (per chat)
MAX_HISTORY=20

# MySQL Database (cPanel hosting)
MYSQL_HOST=
MYSQL_PORT=3306
MYSQL_USER=
MYSQL_PASSWORD=
MYSQL_DB=

# Provider API Keys (see config.json for available providers)
OPENROUTER_API_KEY=
GROQ_API_KEY=
GOOGLE_API_KEY=
DEEPSEEK_API_KEY=

# Email Configuration (for /email and /inbox commands)
EMAIL_ADDRESS=
EMAIL_PASSWORD=
SMTP_SERVER=
SMTP_PORT=587
IMAP_SERVER=

# GitHub Configuration (for /gh commands)
GITHUB_TOKEN=
GITHUB_USERNAME=
